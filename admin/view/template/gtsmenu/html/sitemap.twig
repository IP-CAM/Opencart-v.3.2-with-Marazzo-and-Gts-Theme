    $(document).on('click', "#link_add", function () {
        var $val = $('input[name="site_href"]:checked').val();
        $("#entry_href_wrapp input").val($val);

       /*var $valName = $('input[name="site_href"]:checked').parent().find('.name').text();
        $("#input_name_wrapp input").val($valName);*/

        $('#sitemap').modal('hide');
    });
</script>