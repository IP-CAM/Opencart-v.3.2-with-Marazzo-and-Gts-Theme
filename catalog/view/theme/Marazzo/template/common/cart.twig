<div class="fl-cart-contain">
    <div class="mini-cart">
        <div class="basket"><a href="{{ cart }}">{% if m_cart_total %}<span id="cart-total">{{ m_cart_total }}</span>{% endif %}</a></div>
        {% if products or vouchers %}
        <div class="fl-mini-cart-content" style="display: none;">
            <div class="block-subtitle">
                <div class="top-subtotal">{{ text_items }}</div>
                <!--top-subtotal-->
                <!--pull-right-->
            </div>
            <!--block-subtitle-->
            <ul class="mini-products-list" id="cart-sidebar">
                {% for product in products %}
                <li class="item first">
                    <div class="item-inner">
                        <a class="product-image" title="{{ product.name }}" href="{{ product.href }}">
                            <img alt="{{ product.name }}" src="{{ product.thumb }}">
                        </a>
                        <div class="product-details">
                            <div class="access">
                                <a class="btn-remove1" onclick="cart.remove('{{ product.cart_id }}');" title="{{ button_remove }}" href="#">{{ button_remove }}</a>
                                <a class="btn-edit" title="Edit item" href="#">
                                    <i class="icon-pencil"></i>
                                    <span class="hidden">Edit item</span>
                                </a>
                            </div>
                            <!--access-->
                            <strong>{{ product.quantity }}</strong> x <span class="price">{{ product.price }}</span>
                            <p class="product-name"><a href="{{ product.href }}">{{ product.name }}</a></p>
                        </div>
                    </div>
                </li>
                {% endfor %}
               {# <li class="item last">
